{
  "name": "Select2Barcode",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Generate QR code image from selected text",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "permissions": [
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "Select2Barcode",
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  }
}