{
  "name": "Select2Barcode",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Generate QR code image from selected text",
  "icons": { "128": "icon_128.png" },
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_title": "Copy2Barcode",
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  }
}